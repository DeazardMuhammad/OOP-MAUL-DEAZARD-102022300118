<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="LoginController">
    <children>
        <Label text="Username" layoutX="80" layoutY="50"/>
        <TextField fx:id="usernameField" layoutX="150" layoutY="50" prefWidth="200"/>
        <Label text="Password" layoutX="80" layoutY="100"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="100" prefWidth="200"/>
        <Button text="Login" layoutX="150" layoutY="150" prefWidth="80" onAction="#handleLogin"/>
    </children>
</AnchorPane>
